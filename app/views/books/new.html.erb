<h1>Books</h1>
<table>
  <thead>
  <th>本のタイトル</th>
  <th colspan="3"></th>
  <th>感想</th>
  </thead>
</table>
<div class="book-wrap">
<% @books.each do |book| %>
   <div class="book-comment">
        <span class="book-body"><%= book.body %></span>
        <span class="book-title"><%=link_to book.title, book_path(book.id) %></span>
    </div>
 </div>
<% end %>
<%= form_with model: @book, url: '/books', method: :post do |f| %>
  <h1>New book</h1>
<% if @book.errors.any? %>
 <%= @book.errors.count %> errors prohibited this book from being saved:
 <ul>
   <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
 </ul>
<% end %>

  <h4>本のタイトル</h4>
  <%= f.text_field :title %>

  <h4>感想</h4>
  <%= f.text_area :body %>
<br>
  <%= f.submit 'Create Book' %>
<% end %>